        <!--                    <GridViewColumn Header="Protocols" DisplayMemberBinding="{Binding EnabledProtocols}" Width="Auto" />-->
        <!--                </GridView>-->
        <!--            </ListView.View>-->
        <!--        </ListView>-->

    </Grid>
</UserControl>
